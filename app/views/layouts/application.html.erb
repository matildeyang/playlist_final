<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div><a href="/songs">All songs</a></div>
    <% if current_user == nil %>
      <div><a href="/users/sign_up"> Sign up </a></div>
      <a href="/users/sign_in"> Sign in </a></div>
    <% else %>
      <div><a href="/users/edit"> Edit user </a></div>
      <div><a href="/users/sign_out"> Sign out </a></div>
      <div><a href="/users/<%= current_user.id %>">My profile</a></div>
    <% end %>
    <%= yield %>
  </body>
</html>
